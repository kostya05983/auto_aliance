<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/main_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:fontFamily="@font/roboto_regular"
            android:text="@string/header_buy_auto_for_you_1"
            android:textColor="@color/colorblack"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:background="@drawable/auto_present"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@color/autoPartsBlockColor"
                android:orientation="vertical"
                android:layout_marginTop="120dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_but_auto_for_you_block"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="20dp"
                    android:maxWidth="350dp"
                    app:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:maxLines="2"
                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_auto_parts"
                    android:text="@string/text_button_buy_auto_for_you"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="10dp"
                    app:fontFamily="@font/roboto_light"
                    android:onClick="buyAutoCall"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/head_buy_auto_for_you_2"
            android:layout_gravity="center"
            app:fontFamily = "@font/roboto_regular"
            android:textColor="@color/colorblack"
            android:maxWidth="400dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_buy__auto_for_you_1"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/roboto_regular"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_buy_auto_for_you_2"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/roboto_regular"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_buy_auto_for_you_3"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/roboto_regular"
            android:maxWidth="400dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_buy_your_auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_menu"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
