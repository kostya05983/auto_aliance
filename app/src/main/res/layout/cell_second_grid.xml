<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/grid_second_image_part"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/aston_martin"
        />
    <TextView
        android:id="@+id/grid_second_name_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorName"
        android:text="Kia Optima New"/>
    <TextView
        android:id="@+id/grid_second_price_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/price_color"
        android:text="Цена: 650 руб/ч (до 6 ч.) | 460 руб/ч (свыше 6 ч.)"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/grid_second_buy_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorWhite"

        android:textColor="@color/colorOrder"

        android:text="@string/order_grid_button"/>

</LinearLayout>