<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/roboto_light"
        android:textSize="25dp"

        android:text='Пакет \"Инвестор\"' />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:minHeight="270dp"
        >
        <ListView
            android:id="@+id/section_investor"
            android:layout_width="match_parent"
            android:layout_margin="5dp"

            android:minHeight="270dp"
            android:dividerHeight="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_order_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_franchising"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/order_grid_button"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorWhite"
        android:onClick="orderingMethod"
        />

</LinearLayout>